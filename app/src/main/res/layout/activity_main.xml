<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="530dp"
            android:padding="20dp"
            app:srcCompat="@android:color/darker_gray"
            android:id="@+id/mainImageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="32dp"
    />
    <Button
            android:text="Tirar Foto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tiraFotoComCameraBtn" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="24dp"
    />
    <Button
            android:text="Detectar Texto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detectaTextoNaFotoBtn" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
    />
</android.support.constraint.ConstraintLayout>